{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "moduleResolution": "bundler",   // ✅ 핵심: expo와 일치시켜야 함
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["react", "react-native"],
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["App.tsx", "app.tsx", "src"]
}
